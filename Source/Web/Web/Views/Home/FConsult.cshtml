@model Models.Parameter.Response.FreightConsult
@{
    ViewBag.Title = "FConsult";
}

<h2>Consultar Frete</h2>

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label for="email">CEP:</label>
                <input class="form-control" name="cep" id="cep">
            </div>
            <div class="form-group">
                <label for="email">Tamanho:</label>
                <input class="form-control" name="tamanho" id="tamanho">
            </div>
            <div class="form-group">
                <label for="email">Peso:</label>
                <input class="form-control" name="peso" id="peso">
            </div>
            <button type="submit" class="btn btn-default">Consultar</button>
        </div>
    }
</div>
<br />
<div class="row">
    @if (Model != null)
    {
        <div class="col-md-6 col-md-offset-3">
            <blockquote class="bg-success">
                <p>@Model.Rua / @Model.Cidade - @Model.Estado = @Model.Valor.ToString("c")</p>
            </blockquote>
        </div>
    }
</div>