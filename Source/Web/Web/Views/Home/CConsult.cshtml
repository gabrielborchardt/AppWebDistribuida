@model Models.Parameter.Response.CreditConsult
@{
    ViewBag.Title = "CConsult";
}

<h2>Consultar Crédito</h2>

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
                <label for="email">CPF:</label>
                <input class="form-control" name="cpf" id="cpf">
            </div>
            <button type="submit" class="btn btn-default">Consultar</button>
        </div>
    }
</div>
<br />
<div class="row">
    @if (Model != null)
    {
        <div class="col-md-6 col-md-offset-3">
            @if (!Model.PossuiDividasEmpresa && !Model.PossuiDividasSerasa)
            {
                <blockquote class="bg-success">
                    <p>Valor Disponível: @Model.ValorDisponivel.ToString("c")</p>
                </blockquote>
            }
            else
            {
                <blockquote class="bg-danger">
                    <p>Cliente não está apto a receber crédito.</p>
                </blockquote>
            }
        </div>
    }
</div>