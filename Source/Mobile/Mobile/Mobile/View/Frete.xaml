<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.View.Frete">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Frete" VerticalOptions="Start"/>
            <Entry Placeholder="CEP Origem" Text="{Binding CepOrigem}"/>
            <Entry Placeholder="CEP Destino" Text="{Binding CepDestino}"/>
            <Entry Placeholder="Peso da Embalagem" Text="{Binding Peso}"/>
            <Entry Placeholder="Tamanho da Embalagem" Text="{Binding Tamanho}"/>
            <Button Text="Calcular Frete" Command="{Binding CalcularCommand}"/>
            <Label Text="{Binding Resultado}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>