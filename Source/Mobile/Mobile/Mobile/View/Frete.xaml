<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.View.Frete" Title="Frete">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
            <Entry Placeholder="CEP Origem" Text="{Binding CepOrigem}"/>
            <Entry Placeholder="CEP Destino" Text="{Binding CepDestino}"/>

            <Label Text="Peso da Embalagem"/>
            <Entry Text="{Binding Peso}"/>

            <Label Text="Tamanho da Embalagem"/>
            <Entry Text="{Binding Tamanho}"/>
            
            <Button Text="Calcular Frete" Command="{Binding CalcularCommand}"/>
            <Label Text="{Binding Resultado}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>