<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.View.Financeiro" Title="Financeiro">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" HorizontalOptions="FillAndExpand">
            <Entry Placeholder="CPF do comprador" Keyboard="Numeric" Text="{Binding Cpf}"/>
            <Button Text="Verificar Situação Financeira" Command="{Binding VerificarCommand}"/>
            <Label Text="{Binding Resultado}" TextColor="{Binding Color}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>